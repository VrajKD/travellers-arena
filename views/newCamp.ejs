<%include ./partials/header.ejs%>
<% if(error!=""){%>
    <div class="alert alert-danger">
        <%-error%>
    </div>
<%}%>
<link rel="stylesheet" type="text/css" href="/css/form.css" />
<h1 class="text-uppercase text-center" style="padding:10px;">List a new Camp!</h1>
<form action="/camps" method="POST">
    <div class="form-group">
        <label for="name">CampSite Name : </label>
        <input class="form-control" type="text" id="name" name="camp[name]"  placeholder="Name of your campsite">
    </div>
    <div class="form-group">
        <label for="image">CampSite Image : </label>
        <input class="form-control" type="text" id="image" name="camp[image]" placeholder="A link to the campground's image!">
    </div>
    <div class="form-group">
        <label for="caption">Caption : </label>
        <input class="form-control" type="text" id="caption" name="camp[caption]" placeholder="A caption for your new campground!">
    </div>
    <div class="form-group">
        <label for="body">CampSite Description : </label>
        <textarea class="form-control" id="body" name="camp[description]" rows="6" placeholder="Some words about your campsite!"></textarea>
    </div>
    <button type="submit" class="btn btn-block btn-basic" value="Submit" style="margin-bottom:5px;">List it!</button>
</form>
<%include ./partials/footer.ejs%>