  <%include ./partials/header.ejs%>

  <img src="<%=camp.image%>" class="mb-2 mt-2" alt="..." style="display:block;margin-right:auto;margin-left:auto;width:200px;height:200px;border-radius:10px;">
  <div class="card mb-3 text-center">
  <div class="card-body" style="margin-bottom:20px;">
    <h3 class="card-title"><%= camp.name %></h3>
    <span><%if(currentUser && camp.author.username==currentUser.username){%>
    <a data-toggle="modal" href="#editModal"><i class="far fa-edit" style="padding-right:5px;"></i></a>
    <!-- Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Campground</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        
<form action="/camps/<%=camp._id%>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="name">CampSite Name : </label>
        <input class="form-control" type="text" id="name" name="camp[name]"  placeholder="Name of your campsite" value="<%=camp.name%>">
    </div>
    <div class="form-group">
        <label for="image">CampSite Image : </label>
        <input class="form-control" type="text" id="image" name="camp[image]" placeholder="A link to the campground's image!" value="<%=camp.image%>">
    </div>
    <div class="form-group">
        <label for="caption">Caption : </label>
        <input class="form-control" type="text" id="caption" name="camp[caption]" placeholder="A caption for your new campground!" value="<%=camp.caption%>">
    </div>
    <div class="form-group">
        <label for="body">CampSite Description : </label>
        <textarea class="form-control" id="body" name="camp[description]" rows="6" placeholder="Some words about your campsite!"><%=camp.description%></textarea>
    </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-success">Edit Campground</button>
      </form>
      </div>
    </div>
  </div>
</div>


    <%}%></span>
    <small class='text-muted' style="font-size:13px;"><%=camp.caption%></small>
    <span><%if(currentUser && camp.author.username==currentUser.username){%>
    <a data-toggle="modal" href="#exampleModal"><i class="far fa-trash-alt" style="padding-left:5px;color:firebrick;"></i></a>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Delete Campground</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this campground?
      </div>
      <div class="modal-footer">
      <form action="/camps/<%=camp._id%>?_method=DELETE" method="POST">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
      </div>
    </div>
  </div>
</div>


    <%}%></span>
    <p class="card-text text-justify mt-4"><%- camp.description %></p>
    <p class="card-text"><small class="text-muted">Submitted by <strong><%=camp.author.username%></strong></small></p>
    <p class="card-text"><small class="text-muted">Created : <%=camp.created.toDateString()%></small></p>
  </div>
</div>
<h5>Comments : </h5><hr>
<form action="/camps/<%=camp._id%>/comments" method="POST">
    <div class='row'>
    <div class="form-group col-md-10 col-sm-4">
        <input class="form-control" type="text" id="text" name="comment[text]"  placeholder="Add your comment" style="margin-bottom:2px;">
    </div>
    <div class='col-md-2' >
    <button type="submit" class="btn btn-md btn-primary">Comment!</button>
    </div>
    </div>
</form>
<%camp.comments.forEach(comment => {%>
    <div class="alert alert-secondary" data-toggle="tooltip" data-placement="left" title="To edit, delete and re-post comment">
        <span>"<%=comment.text%>" - <strong><%=comment.author.username%></strong></span>
        <%if(currentUser && comment.author.username==currentUser.username){%>
        <a style="text-align:right!important" href="/camps/<%=camp._id%>/comments/<%=comment.id%>"><i class="far fa-trash-alt" style="padding-left:5px;color:firebrick;"></i></a>
        <%}%>
    </div>
<%})%>
<script>
$(document).ready(function(){
  $('[data-toggle="tooltip"]').tooltip();   
});
</script>
