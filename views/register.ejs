<%include ./partials/header.ejs%>
<link rel="stylesheet" type="text/css" href="/css/form.css" />
<h1 class="text-uppercase text-center" style="padding:10px;">Create a new account</h1>
<form action="/register" method="POST" class="col-md-6 text-center" style="margin:0 auto">
    <div class="form-group">
        <label for="username">Username : </label>
        <input class="form-control" type="text" id="username" name="username"  placeholder="Username">
    </div>
    <div class="form-group">
        <label for="password">Password : </label>
        <input class="form-control" type="password" id="password" name="password"  placeholder="Password">
    </div>
    <button type="submit" class="btn btn-block btn-basic" style="margin-bottom:5px;">Sign Up!</button>
</form>
<%include ./partials/footer.ejs%>